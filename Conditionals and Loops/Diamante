

#include <stdio.h>

int main ()
{

    int n;
    printf("Escolha o tamanho do diamante: ");
    scanf("%d", &n);
    
    
    for(int i = 1; i <= n + 1; i++){
        for(int k = n; k >= i; k--){
            printf(" ");
        }
        
        for(int u = 1; u <= i; u++){
            printf(" *");
            if(u == i){
                printf("\n");
            }
        }
    }   
    for(int i = 1; i <= n + 1; i++){
        for(int k = 0; k <= i; k++){
            printf(" ");
        }
        for(int c = n; c >= i; c--){
            printf("* ");
            if(c == i){
                printf("\n");
            }
        }
        
        
        
     
    }   

  return 0;
}
