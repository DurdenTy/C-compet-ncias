#include <stdio.h>

int main()
{
    int n, k = 1;
    printf("Escolha o valor máximo do arranjo: ");
    scanf("%d", &n);
    int soma;
    
    
    for(int u = 1; u <= n; u++){
        printf("números pares são %d \n", 2 * u);
        k += 2 * u;
    }
    
    printf("A soma dos números são %d", k - 1);
    
    

    return 0;
}
