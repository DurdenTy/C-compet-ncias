
#include <stdio.h>

int main()
{
    int n;
    printf("Escolha o valor máximo do arranjo: ");
    scanf("%d", &n);
    
    int soma;
    
    
    for(int i = 0; i < n; i++){
        printf("Os números impares são: %d \n", 2 * i + 1 );
        soma += 2 * i + 1;
    }
    
    printf("Os números impares até %d, são %d",n, soma);
    
    
    

    return 0;
}
