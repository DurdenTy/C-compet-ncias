#include <stdio.h>

int main ()
{

    int n, k = 0;
    printf("Escolha o tamanho do diamante: ");
    scanf("%d", &n);
    
    for(int i = 1; i <= n; i++){
        if(n % i == 0){
            k++;
        }
    }
    if(k == 2){
        printf("%d é número primo", n);
    }else{
        printf("%d não é número primo", n);
    }
    
    
    
  return 0;
}
