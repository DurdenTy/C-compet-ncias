#include <stdio.h>

int main ()
{

    int n, soma, k = 0, soma2 = 0;
    printf("Escolha o limite do loop para simar divisores perfeitos: \n");
    scanf("%d", &n);
    
    
    printf("Total de termos são positivos são: ");
    for(int i = 1; i <= n / 2; i++){
        if(n % i == 0){
            soma = i;
            printf("%d ", soma);
            soma2 += soma;
        }
        
        
    }   
    
    printf("\nA soma do valor total é %d", soma2);

  return 0;
}
