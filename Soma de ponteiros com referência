# include <stdio.h>



int main()
{
    int x, y, *ptrx, *ptry, soma;
    
    printf("Coloque o seu número para somar: ");
    scanf("%d", &x);
    printf("Coloque o seu outro número para somar: ");
    scanf("%d", &y);
    ptrx = &x;
    ptry = &y;
    soma = *ptrx +  *ptry;
    
    printf("A soma de %d, com %d é: %d",*ptrx,*ptry, soma);
  
    

    
    
    return 0;
}

