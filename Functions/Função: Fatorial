#include <stdio.h>

int fatorial(int x);

int main()
{
   int m, x;
   printf("Coloque seu número para ver seu fatorial: ");
   scanf("%d", &x);
   m = fatorial(x);
   printf("O fatorial de %d é: %d", x, m);

    return 0;
}

int fatorial(int x){
    if(x == 1){
        return 1;
    }
    return x = x * fatorial(x - 1);
}
