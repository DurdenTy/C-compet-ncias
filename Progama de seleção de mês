#include <stdio.h>

int main()
{
int mes;
printf("Qual seu mes desejado de 1 a 12: ");
scanf("%d", &mes);

switch(mes){
    case 1:
        printf("Você digitou Janeiro! ");
        break;
    case 2:
        printf("Você digitou Fevereiro! ");
        break;
    case 3:
        printf("Você digitou Março! ");
        break;
    case 4:
        printf("Você digitou Abril! ");
        break;
    case 5:
        printf("Você digitou Maio! ");
        break;
    case 6:
        printf("Você digitou Junho! ");
        break;
    case 7:
        printf("Você digitou Julho! ");
        break;
    case 8:
        printf("Você digitou Agosto! ");
        break;
    case 9:
        printf("Você digitou Setembro! ");
    break;
    case 10:
        printf("Você digitou Outubro! ");
        break;
    case 11:
        printf("Você digitou Novembro! ");
    break;
    case 12:
        printf("Você digitou Dezembro! ");
        break;
    default:
        printf("Digite um mês válido entre 1 e 12");
        break;
}

return 0;
}

